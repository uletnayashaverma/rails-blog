<article class="post" data-aos="fade-right">
	<section class="post-head">
		<h2><%= link_to post.title, post_path(post) %></h2>
		<small class="d-flex align-items-center gap-2">
			<time><%= post.created_at.to_date.strftime("%d %B, %Y") %></time> |

			<% if post.category.present? %>
				<%= link_to post.category.name, post.category %> |
			<% end %>

			<% if user_signed_in? && current_user.admin? %>
				<%= link_to "Изменить", edit_admin_post_path(post) %> |
				<%= button_to "Удалить", admin_post_path(post), method: :delete, data: { turbo_confirm: "Вы уверены?" } %>
			<% end %>

		</small>
	</section>
	<section class="post-summary clearfix">
		<%= image_tag post.image.url(:thumb), class: "img-thumbnail thumb" if post.image? %>
		<%= post.summary %>
	</section>

	<section class="footer-summary">
		<%= raw post.tags.map(&:name).map{ |t| link_to t, tag_path(t), class: "badge text-bg-primary" }.join(" ") %>
	</section>
</article>