<h1><%= t(".title") %></h1>

<% if user_signed_in? && current_user.admin? %>
	<%= link_to "Новая статья", new_admin_post_path, class: "btn btn-outline-primary me-2" %>
	<%= link_to "Категории", admin_categories_path, class: "btn btn-warning" %>
<% end %>

<%= render @posts %>

<div class="pagination-wrapper">
	<%= will_paginate @posts, class: "digg_pagination" %>
</div>